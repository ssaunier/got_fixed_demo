<h1>Listing issues</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Resolved?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr data-issue-vendor-id="<%= issue.vendor_id %>">
        <td>#<%= issue.number %></td>
        <td><%= issue.title %></td>
        <td><%= issue.closed ? "yes" : "no" %></td>
        <td>
          <%= link_to "Subscribe", subscribe_issue_path(issue), :class => "subscribe" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal fade" id="modal-subscribe">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag "#", id: "form-subscriber", remote: true do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Get notified when issue is fixed</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" placeholder="john@smith.me" id="email" name="user[email]" class="form-control">
          </div>
        </div>
        <div class="modal-footer">
          <input type="submit" class="btn btn-primary" value="Subscribe" />
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
